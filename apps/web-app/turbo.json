{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"inputs": [
				"app/**",
				"public/**",
				"tailwind.config.ts",
				"vite.config.ts",
				"load-context.ts",
				"postcss.config.js",
				"../worker-app/wrangler.toml",
				"../worker-app/**/*.ts",
				"package.json"
			],
			"outputs": ["build/**"]
		},
		"dev": {
			"dependsOn": ["worker-app#dev:check"]
		}
	}
}
