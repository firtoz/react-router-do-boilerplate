{
	"extends": "@greybox/shared-tsconfig/tsconfig.json",
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],

		"types": [
			"@remix-run/cloudflare",
			"@cloudflare/workers-types",
			"vite/client"
		],
		"jsx": "react-jsx",

		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"esModuleInterop": true,
		"module": "esnext"
	}
}
